@{
}

<table class="table table-bordered table-striped mt-3">

    <thead class="color-byu">
        <tr>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
            <th>TeamID</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        @* For all the appointments display the Date, time, group name, group size, email, and phone *@
        @foreach (Bowler b in Model.Bowlers)
        {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>@b.TeamID</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="EditForm" asp-route-bowlerid="@b.BowlerID">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="DeletePage" asp-route-bowlerid="@b.BowlerID">Delete</a>
            </td>
        </tr>
        }

    </tbody>

</table>